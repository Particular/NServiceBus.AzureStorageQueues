<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netstandard2.0</TargetFrameworks>
    <AssemblyName>NServiceBus.Transport.AzureStorageQueues</AssemblyName>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <RootNamespace>NServiceBus.AzureStorageQueues</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.Transport.AzureStorageQueues</PackageId>
    <Description>NServiceBus Transport for Azure Storage Queues</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Storage.Queues" Version="[12.11.1, 13.0.0]" />
    <PackageReference Include="Azure.Storage.Blobs" Version="[12.13.1, 13.0.0]" />
    <PackageReference Include="Microsoft.Azure.Cosmos.Table" Version="[1.0.8, 2.0.0]" />
    <PackageReference Include="NServiceBus" Version="[7.4.4, 8.0.0)" />
    <PackageReference Include="Fody" Version="6.6.0" PrivateAssets="All" />
    <PackageReference Include="Janitor.Fody" Version="1.9.0" PrivateAssets="All" />
    <PackageReference Include="Obsolete.Fody" Version="5.3.0" PrivateAssets="All" />
    <PackageReference Include="Particular.Packaging" Version="2.3.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
