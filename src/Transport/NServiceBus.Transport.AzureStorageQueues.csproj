<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;net6.0</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <LangVersion>10.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.Transport.AzureStorageQueues</PackageId>
    <Description>NServiceBus Transport for Azure Storage Queues</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Data.Tables" Version="[12.6.1, 13.0.0)" />
    <PackageReference Include="Azure.Storage.Queues" Version="[12.11.1, 13.0.0)" />
    <PackageReference Include="Azure.Storage.Blobs" Version="[12.13.1, 13.0.0)" />
    <PackageReference Include="NServiceBus" Version="[8.0.0-rc.3, 9.0.0)" />
    <PackageReference Include="Fody" Version="[6.6.4, 7.0.0)" PrivateAssets="All" />
    <PackageReference Include="Janitor.Fody" Version="[1.9.0, 2.0.0)" PrivateAssets="All" />
    <PackageReference Include="Obsolete.Fody" Version="[5.3.0, 6.0.0)" PrivateAssets="All" />
    <PackageReference Include="Particular.Packaging" Version="[2.2.0, 3.0.0)" PrivateAssets="All" />
    <PackageReference Include="System.Linq.Async" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="NServiceBus.Transport.AzureStorageQueues.AcceptanceTests" Key="$(NServiceBusTestsKey)" />
    <InternalsVisibleTo Include="NServiceBus.Transport.AzureStorageQueues.Tests" Key="$(NServiceBusTestsKey)" />
    <InternalsVisibleTo Include="NServiceBus.Transport.AzureStorageQueues.TransportTests" Key="$(NServiceBusTestsKey)" />
  </ItemGroup>

</Project>
