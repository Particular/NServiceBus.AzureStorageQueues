<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net452;netstandard2.0</TargetFrameworks>
    <AssemblyName>NServiceBus.Azure.Transports.WindowsAzureStorageQueues</AssemblyName>
    <NuSpecFileName>nservicebus.azurestoragequeues</NuSpecFileName>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.Azure.Transports.WindowsAzureStorageQueues</PackageId>
    <Description>NServiceBus Transport for the Windows Azure Storage Queues</Description>
  </PropertyGroup>

  <ItemGroup>
    <!-- Minimum requried version for WindowsAzure.Storage is 8.2.0 -->
    <PackageReference Include="WindowsAzure.Storage" Version="[8.2.0, 9.0.0)" />
    <PackageReference Include="NServiceBus" Version="[7.0.0-*, 8.0.0)" />
    <PackageReference Include="NServiceBus.Newtonsoft.Json" Version="[2.0.0-*, 3.0.0)" />
    <PackageReference Include="Fody" Version="2.*" PrivateAssets="All" />
    <PackageReference Include="Janitor.Fody" Version="1.*" PrivateAssets="All" />
    <PackageReference Include="Obsolete.Fody" Version="4.*" PrivateAssets="All" />
    <PackageReference Include="Particular.CodeRules" Version="0.*" PrivateAssets="All" />
  </ItemGroup>
</Project>