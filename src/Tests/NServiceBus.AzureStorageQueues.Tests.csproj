<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net452;netcoreapp2.0</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Transport\NServiceBus.AzureStorageQueues.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="NServiceBus.Azure.Transports.WindowsAzureStorageQueues.approved.cs" />
    <Compile Remove="NServiceBus.Azure.Transports.WindowsAzureStorageQueues.received.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="APIApprovals.ApproveAzureStorageQueueTransport.approved.txt" />
    <None Remove="APIApprovals.ApproveAzureStorageQueueTransport.received.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.3.0" />
    <PackageReference Include="NUnit" Version="3.7.1" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.3.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.8.0-alpha1" />
    <PackageReference Include="RhinoMocks" Version="3.6.1" NoWarn="NU1701" />

    <!-- Force tests to run with the latest Storage library -->
    <PackageReference Include="WindowsAzure.Storage" Version="8.*" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net452'">
    <PackageReference Include="ApprovalTests" Version="3.0.13" />
    <PackageReference Include="Mono.Cecil" Version="0.10.0-beta6" />
    <PackageReference Include="PublicApiGenerator" Version="6.1.0-beta2" />
  </ItemGroup>

  <ItemGroup>
    <!-- Remove when package is updated to work with .NET Standard 2.0 -->
    <PackageReference Include="NServiceBus.Newtonsoft.Json" Version="2.0.0-*" NoWarn="NU1701" />
  </ItemGroup>
</Project>